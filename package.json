{
  "name": "yafa-ms-vnext",
  "version": "1.0.0",
  "description": "YAFA-MS - AI Business Assistant Platform",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && vite",
    "dev:backend": "cd backend && tsx watch src/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && vite build",
    "build:backend": "cd backend && tsc",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "setup": "npm install && npm run setup:dirs",
    "setup:dirs": "mkdir -p data/bundles data/files backend/src frontend/src"
  },
  "keywords": ["ai", "business", "automation", "assistant"],
  "author": "YAFA-MS Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "fastify": "^4.24.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "archiver": "^6.0.1",
    "tsx": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/archiver": "^6.0.2",
    "typescript": "^5.3.2",
    "concurrently": "^8.2.2",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "workspaces": ["frontend", "backend"]
}
