# YAFA-MS Configuration
NODE_ENV=development

# Database
YAFA_DB_PATH=./data/yafa.db

# Server
PORT=3001
HOST=0.0.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: n8n Integration
USE_N8N=false
N8N_WEBHOOK_URL=http://localhost:5678/webhook/yafa

# Optional: External AI Services (if extending beyond built-in YAFA protocol)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=...

# Logging
LOG_LEVEL=info

# File Storage
MAX_FILE_SIZE=10MB
BUNDLE_RETENTION_DAYS=30
